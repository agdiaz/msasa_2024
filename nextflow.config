profiles {
    standard {
        env {
            PYTHONUNBUFFERED=1
        }

        timeline.enabled = true
        timeline.overwrite = true
        report.enabled = true
        report.overwrite = true
        dag.enabled = true
        dag.file = "workflow.png"
        dag.overwrite = true

        process {
            executor = 'local'
            cpus = 2
            memory = 4.GB

            withLabel: msasa {
                conda.enabled = true
                conda = '/Users/adrian/miniconda3/envs/msasa_2024'
            }

            withName:computeBaliScore {
                container = 'local/baliscore'
            }

            withName:computeMumsaOverlapScore {
                container = 'local/mumsa'
            }
        }
    }
}
